<body>
    <section class="contador">
        <h2 id="valor">0</h2>
        <button id="incrementar">Incrementar</button>
        <button id="decrementar">Decrementar</button>
    </section>
   <script type="text/javascript">
    var count = 0
    var btn = document.getElementById("incrementar");
    var btn1 = document.getElementById("decrementar");
    var disp = document.getElementById("valor");

    btn.onclick = function(){
    count++ ;
    disp.innerHTML = count ;
    }
    btn1.onclick = function(){
    count-- ;
    disp.innerHTML = count ;
    }
</script>
